<reactiveui:ReactivePage
      x:Class="WPFUI.Views.Tabs.VillagesPage"
      x:TypeArguments="local:VillagesViewModel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPFUI.ViewModels.Tabs"
      xmlns:reactiveui="http://reactiveui.net"
      xmlns:tabs="clr-namespace:WPFUI.Views.Tabs.Villages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VillagesPage">

    <Grid Background="#FFE5E5E5" Margin="0,2,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*" />
            <ColumnDefinition Width="307*" />
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="VillagesGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,1,0" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Coords" Binding="{Binding Coords}" />
            </DataGrid.Columns>
        </DataGrid>
        <TabControl Grid.Column="1" Margin="1,0,0,0">
            <TabItem x:Name="NoVillageTab" Header="No village" IsVisibleChanged="NoVillageTab_IsVisibleChanged">
                <Grid Background="#FFE5E5E5">
                    <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="NO VILLAGE IS SELECTED" VerticalAlignment="Center" TextAlignment="Center" LineHeight="11" />
                </Grid>
            </TabItem>
            <TabItem x:Name="BuildTab" Header="Build" IsVisibleChanged="BuildTab_IsVisibleChanged">
                <Frame>
                    <Frame.Content>
                        <tabs:BuildPage />
                    </Frame.Content>
                </Frame>
            </TabItem>
            <TabItem x:Name="InfoTab" Header="Info">
                <Frame>
                    <Frame.Content>
                        <tabs:InfoPage />
                    </Frame.Content>
                </Frame>
            </TabItem>
        </TabControl>
    </Grid>
</reactiveui:ReactivePage>