<reactiveui:ReactivePage
      x:Class="WPFUI.Views.Tabs.VillagesPage"
      x:TypeArguments="local:VillagesViewModel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPFUI.ViewModels.Tabs"
      xmlns:reactiveui="http://reactiveui.net"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VillagesPage">

    <Grid Background="#FFE5E5E5" Margin="0,2,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="307*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="VillagesGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,1,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Coords" Binding="{Binding Coords}" />
                <DataGridTextColumn Header="Resources status" Binding="{Binding ResourcesStatus}" />
            </DataGrid.Columns>
        </DataGrid>
        <TabControl Grid.Column="1" Margin="1,0,0,0">
            <TabItem x:Name="BuildTab" Header="Build">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="InfoTab" Header="Info">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</reactiveui:ReactivePage>