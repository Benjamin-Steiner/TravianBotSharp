<reactiveui:ReactiveWindow
        x:Class="WPFUI.MainWindow"
        x:TypeArguments="local:MainWindowViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI"
        xmlns:tabs="clr-namespace:WPFUI.Views.Tabs"
        xmlns:reactiveui="http://reactiveui.net"
        mc:Ignorable="d"
        Title="MainWindow" Height="510" Width="1024">
    <Grid x:Name="MainGrid" Margin="5,5,5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="410*" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="LeftGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="32*" />
                <RowDefinition Height="32*" />
                <RowDefinition Height="32*" />
                <RowDefinition Height="32*" />
                <RowDefinition Height="32*" />
                <RowDefinition Height="32*" />
                <RowDefinition Height="286*" />
            </Grid.RowDefinitions>
            <Button x:Name="CheckVersionButton" Content="CHECK NEW VERSION" Grid.ColumnSpan="2" Margin="0,0,0,2" Background="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" Foreground="White" />
            <Button x:Name="AddAccountButton" Content="Add account" Grid.Row="1" Margin="0,0,1,2" />
            <Button x:Name="AddAccountsButton" Grid.Column="1" Content="Add accounts" Grid.Row="1" Margin="1,0,0,2" />
            <Button x:Name="LoginButton" Content="Login" Grid.Row="2" Margin="0,0,1,2" />
            <Button x:Name="LogoutButton" Grid.Column="1" Content="Logout" Grid.Row="2" Margin="1,0,0,2" />
            <Button x:Name="EditButton" Content="Edit" Grid.Row="3" Margin="0,0,1,2" />
            <Button x:Name="DeleteButton" Grid.Column="1" Content="Delete" Grid.Row="3" Margin="1,0,0,2" />
            <Button x:Name="SettingsButton" Content="Settings" Grid.ColumnSpan="2" Grid.Row="4" Margin="0,0,0,1" />
            <Button x:Name="LoginAllButton" Content="Login all" Grid.Row="5" Margin="0,0,1,2" />
            <Button x:Name="LogoutAllButton" Grid.Column="1" Content="Logout all" Grid.Row="5" Margin="1,0,0,2" />
            <DataGrid x:Name="AccountGrid" Grid.ColumnSpan="2" Grid.Row="6"  IsReadOnly="True" SelectionMode="Single" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Account" Binding="{Binding Username}" />
                    <DataGridTextColumn Header="Server" Binding="{Binding Server}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <TabControl Grid.Column="1" Margin="5,0,0,0">
            <TabItem x:Name="NoAccountTab" Header="No account" Visibility="Visible" IsVisibleChanged="NoAccountTab_IsVisibleChanged">
                <Grid Background="#FFE5E5E5">
                    <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="NO ACCOUNT IS SELECTED" VerticalAlignment="Center" TextAlignment="Center" LineHeight="11" />
                </Grid>
            </TabItem>
            <TabItem x:Name="OverviewTab" Header="Overview" IsVisibleChanged="OverviewTab_IsVisibleChanged">
                <Frame>
                    <Frame.Content>
                        <tabs:OverviewPage x:Name="OverviewPage" />
                    </Frame.Content>
                </Frame>
            </TabItem>
            <TabItem x:Name="VillagesTab" Header="Villages">
                <Frame>
                    <Frame.Content>
                        <tabs:VillagesPage x:Name="VillagesPage" />
                    </Frame.Content>
                </Frame>
            </TabItem>
            <TabItem x:Name="DebugTab" Header="Debug">
                <Frame>
                    <Frame.Content>
                        <tabs:DebugPage x:Name="DebugPage" />
                    </Frame.Content>
                </Frame>
            </TabItem>
        </TabControl>
    </Grid>
</reactiveui:ReactiveWindow>